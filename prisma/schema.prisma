generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum eUserType {
  ADMIN
  REFREE
  USER
  PLAYER
  COACH
}

model User {
   id String @id @default(uuid()) @db.Uuid
   first_name  String
   last_name String?
   user_name String @unique
   role eUserType @default(USER)
   email String @unique
   mobile_number String @unique
   hash_password String
}
